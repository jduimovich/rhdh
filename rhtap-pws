function showRoutesInNS() { 
    echo $1
    RNS=$2 
    ROUTES=$(oc get routes -n $RNS -o name)
    ROUTES=${ROUTES/ /$'\n'/}
    for r in $ROUTES; do 
        URL=https://$(oc get $r -n $RNS -o jsonpath={.spec.host})
        echo " $URL" 
    done 
}

URL=https://$(oc get routes argocd-server -n $RHTAP_NS -o jsonpath={.spec.host})
