SCRIPTDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )" 

echo "Additional config after default helm install"
echo "When the installer implements these features, remove from here"

echo "Enable the certificate for ArgoCD"
bash $SCRIPTDIR/rhdh-configure-tls

echo "Enable gitlab" 
bash $SCRIPTDIR/enable-gitlab  
 
echo "Create a demo namespace" 
bash $SCRIPTDIR/configure-namespace demo

echo "Kube and service account" 
bash $SCRIPTDIR/configure-service-account